# --- Fonts ---
font-family = Iosevka
font-family = Symbols Nerd Font
font-family = Noto Emoji
font-size = 15

# --- Theme & Window ---
theme = tokyonight
background-opacity = 1.0
window-decoration = false
confirm-close-surface = false

# --- Cursor ---
cursor-style = block
cursor-style-blink = false
mouse-hide-while-typing = true

#  KEYBINDINGS (Leader: Ctrl+a)
# Split Management
keybind = ctrl+a>v=new_split:down
keybind = ctrl+a>;=new_split:right

# Tab Management
keybind = ctrl+a>c=new_tab
keybind = ctrl+a>1=goto_tab:1
keybind = ctrl+a>2=goto_tab:2
keybind = ctrl+a>3=goto_tab:3
keybind = ctrl+a>4=goto_tab:4
keybind = ctrl+a>5=goto_tab:5
keybind = ctrl+a>6=goto_tab:6
keybind = ctrl+a>7=goto_tab:7
keybind = ctrl+a>8=goto_tab:8

# Send Literal Ctrl+A (Double press)
# keybind = ctrl+a>ctrl+a=text:\x01

#  STANDARD NAVIGATION
# Resize Splits
keybind = alt+h=resize_split:left,20
keybind = alt+j=resize_split:down,20
keybind = alt+k=resize_split:up,20
keybind = alt+l=resize_split:right,20

# Move Focus
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+j=goto_split:down
keybind = ctrl+shift+k=goto_split:up
keybind = ctrl+shift+l=goto_split:right

# Font Sizing
keybind = ctrl+equal=increase_font_size:1
keybind = ctrl+minus=decrease_font_size:1

# Clipboard
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
