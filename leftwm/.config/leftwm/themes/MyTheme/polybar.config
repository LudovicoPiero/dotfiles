; Polybar Config mimicking your slstatus
; Tokyo Night Theme

[colors]
background = #1a1b26
foreground = #c0caf5
primary = #7aa2f7
secondary = #9ece6a
alert = #f7768e
disabled = #565f89
border = #1a1b26

[bar/main]
width = 100%
height = 24pt
radius = 0

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2pt
border-size = 0pt
border-color = ${colors.border}

padding-left = 0
padding-right = 1

module-margin = 1

; Matches your " | " separator from slstatus
separator = |
separator-foreground = ${colors.disabled}

font-0 = "Iosevka:size=12;2"
font-1 = "Symbols Nerd Font:size=12;2"
; Font for Japanese characters
font-2 = "Noto Sans CJK JP:size=12;2"

; Modules matching your array order
modules-left = xworkspaces xwindow
modules-right = cpu memory filesystem brightness volume battery wlan date

cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true
wm-restack = generic

[module/xworkspaces]
type = internal/xworkspaces
pin-workspaces = true
label-active = %name%
label-active-background = ${colors.primary}
label-active-foreground = ${colors.background}
label-active-padding = 1
label-occupied = %name%
label-occupied-padding = 1
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

; CPU: CPU %s%%
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "CPU "
format-prefix-foreground = ${colors.primary}
label = %percentage%%

; RAM: RAM %s
[module/memory]
type = internal/memory
interval = 2
format-prefix = "RAM "
format-prefix-foreground = ${colors.primary}
label = %gb_used%

; Disk: Disk %s%%
[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
label-mounted = Disk %percentage_used%%
label-mounted-foreground = ${colors.foreground}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

; Brightness: Bright %s%%
[module/brightness]
type = custom/script
exec = brightnessctl -m | cut -d, -f4 | tr -d %
interval = 1
format-prefix = "Bright "
format-prefix-foreground = ${colors.primary}
label = %output%%
scroll-up = brightnessctl set +5%
scroll-down = brightnessctl set 5%-

; Volume: Vol %s
[module/volume]
type = internal/pulseaudio
format-volume-prefix = "Vol "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>
label-volume = %percentage%%
label-muted = Muted
label-muted-foreground = ${colors.disabled}

; Battery: BAT 100%
[module/battery]
type = internal/battery
full-at = 99
low-at = 10
battery = BAT1
adapter = ACAD
poll-interval = 5
; Charging
format-charging = <label-charging>
format-charging-prefix = "BAT "
format-charging-prefix-foreground = ${colors.primary}
label-charging = %percentage%%
; Discharging
format-discharging = <label-discharging>
format-discharging-prefix = "BAT "
format-discharging-prefix-foreground = ${colors.primary}
label-discharging = %percentage%%
; Full
format-full = <label-full>
format-full-prefix = "BAT "
format-full-prefix-foreground = ${colors.primary}
label-full = %percentage%%

; Wifi: Wifi %s
[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0
format-connected = <label-connected>
format-connected-prefix = "IP Leak "
format-connected-prefix-foreground = ${colors.primary}
label-connected = %local_ip%
label-disconnected = Wifi disconnected
label-disconnected-foreground = ${colors.disabled}

; Date: Date %s
[module/date]
type = custom/script
; Added "Date" text before the Japanese date
exec = LC_ALL=ja_JP.UTF-8 date '+Date %A, %Y年%-m月%-d日'
interval = 60
click-left = xdg-open https://calendar.google.com
